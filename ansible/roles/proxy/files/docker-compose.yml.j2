version: "3"
services:
  varnish:
    image: varnish:7.2.1
    container_name: varnish
    volumes:
      - "/opt/varnish/default.vcl:/etc/varnish/default.vcl"
    ports:
      - "80:80"
    # tmpfs:
    #   - /var/lib/varnish:exec
    environment:
      - VARNISH_SIZE=2G  
    command: "-p default_keep=300"
